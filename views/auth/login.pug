extends ../layouts/base
block content
    .container.mt-5
        h2.text-center Login
        if errors
            each error in errors
                .alert.alert-danger= error
        form(method="POST")
            .form-group
                label(for="email") Email
                input.form-control(name="email", type="text", placeholder="Email" id="email", value= values ? values.email :"")
            .form-group
                label(for="email") Password
                input.form-control(name="password", type="password", placeholder="Password" id="password")
            .d-flex.justify-content-center
                button.btn.btn-primary Login